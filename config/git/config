[user]
    name = Matthew Grossman
    email = matthewryangrossman@gmail.com
[alias]
    branch-name = rev-parse --abbrev-ref HEAD
    last-commit = log -1 --pretty=%B

    p = push
    b = branch
    fm = pull
    co = checkout
    dm = diff master
    c = commit
    ca = commit --all
    a = add
    rv = revert
    rs = reset
    d = diff --no-ext-diff
    s = status
    m = merge
    l = log
    ld = log --stat --patch --full-diff
    mm = merge master
    giff = diff

    ticket-prefix = "!git branch-name | perl -ne 's/(XD-\\d{4,}).*/\\1: / && print'"
    pr-name = "!echo \"$(git ticket-prefix)\"\"$(git last-commit)\""
    msg = "!tpl=\"$(cat pull_request_template.md 2>/dev/null)\";echo \"$(git pr-name)\\n\\n$tpl\""
    pm = "!git checkout master && git pull && git checkout - && git merge master --no-edit"
    bc = "!git checkout master && git pull && git checkout -b"
    po = "!git push -u origin $(git branch-name)"
    pr = "!hub pull-request --push --copy --browse --edit"
[core]
    excludesfile = ~/.config/git/gitignore_global
